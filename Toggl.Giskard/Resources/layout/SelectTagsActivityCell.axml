<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <TextView
        android:maxLines="1"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        tools:text="This is a ridiculously big tag name for testing someth other stuff and"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left" />
    <View
        android:background="@drawable/TransparentToWhiteGradient"
        android:layout_width="48dp"
        android:layout_marginRight="24dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right" />
    <View
        android:background="@android:color/white"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right" />
    <CheckBox
        android:checked="true"
        android:buttonTint="@color/checkboxTint"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right" />
    <View
        android:foregroundTint="#328fff"
        android:background="@color/separator"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent" />
</FrameLayout>